<%- include('layout/header')%>
<head>
    <style>
        .card {
          box-shadow: 0 4px 8px 0 rgba(0, 0.22, 0, 0.322);
          transition: 0.3s;
          width: 50%;
          text-align: center;
         
        }
        
        .card:hover {
          box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }
        
        .content {
          padding: 2px 16px;
          text-align: center;
        }
        </style>
</head>
<div class="container"  align="center">
    <div class="row">
        <div class="col" >
            <div class="card" >
                <div class="content">
                <form action="/update/<%=users.id%>" method="post" enctype="multipart/form-data">
                <table>
                    <th >Edit User (<%=users.name%>)</th>
                    
                    <tr>
                        <td>
                            <label for="name">Name</label>
                            <input type="text" name="name" placeholder="Enter name" value="<%=users.name%>" required>
                        </td>
                    </tr>
                  
                    <tr>
                        <td>
                            <label for="email">Email</label>
                            <input type="email" name="email" placeholder="xyz@gmail.com" value="<%=users.email%>" required>
                        </td>
                    </tr>
                   
                    <tr>
                        <td>
                            <label for="phone">Phone</label>
                            <input type="tel" name="phone" placeholder="Enter phone" value="<%=users.phone%>" required>
                           
                        </td>
                    </tr>
                   
                    <tr>
                        <td>
                            <label for="image">select image</label>
                            <input type="file" name="image"   >
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <img src="/<%=users.image%>" width="100">
                            <input type="hidden" name="old_image" value="<%=users.image%>">
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <input type="submit" name="submit"  value="update" class="btn btn-success">
                        </td>
                    </tr>
                </table>
                
                
                </form>
                </div>
              </div>
        </div>
    </div>
</div>


<%- include('layout/footer')%>
